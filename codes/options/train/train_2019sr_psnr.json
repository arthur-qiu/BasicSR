{
  "name": "AFLPSNR_x1" //  please remove "debug_" during training
  , "use_tb_logger": true
  , "model":"srafl"
  , "scale": 1
  , "gpu_ids": [0,1]

  , "datasets": {
    "train": {
      "name": "DIV2K_train"
      , "mode": "LRHR"
      , "dataroot_HR": "/mnt/lustrenew/qiuhaonan/2019sr/train_hrsub"
      , "dataroot_LR": "/mnt/lustrenew/qiuhaonan/2019sr/train_lrsub"
      , "subset_file": null
      , "use_shuffle": true
      , "n_workers": 4
      , "batch_size": 4
      , "HR_size": 128
      , "use_flip": true
      , "use_rot": true
    }
    , "val": {
      "name": "DIV2K_valid"
      , "mode": "LRHR"
      , "dataroot_HR": "/mnt/lustrenew/qiuhaonan/2019sr/valid_lrsub"
      , "dataroot_LR": "/mnt/lustrenew/qiuhaonan/2019sr/valid_lrsub"
    }
  }

  , "path": {
    "root": "/mnt/lustrenew/qiuhaonan/BasicSR"
    , "pretrain_model_G": null
  }

  , "network_G": {
    "which_model_G": "RRDB_net_afl" // RRDB_net | sr_resnet
    , "norm_type": null
    , "mode": "CNA"
    , "nf": 64
    , "nb": 23
    , "in_nc": 3
    , "out_nc": 3
    , "gc": 32
    , "group": 1
  }
  , "train": {
    "lr_G": 2e-4
    , "lr_scheme": "MultiStepLR"
    , "lr_steps": [200000, 400000, 600000, 800000]
    , "lr_gamma": 0.5

    , "pixel_criterion": "l1"
    , "pixel_weight": 1.0
    , "val_freq": 5e3

    , "manual_seed": 0
    , "niter": 1e6
  }

  , "logger": {
    "print_freq": 200
    , "save_checkpoint_freq": 5e3
  }
}
